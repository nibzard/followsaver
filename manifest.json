{
  "manifest_version": 3,
  "name": "FollowSaver",
  "version": "1.0",
  "description": "Collect. Organize. Never lose a follower. Save your Twitter followers and following lists privately.",
  
  "permissions": [
    "storage",
    "activeTab",
    "alarms"
  ],
  
  "host_permissions": [
    "https://x.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://x.com/*/following*", "https://x.com/*/followers*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://x.com/*"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "FollowSaver - Manage Your Connections"
  }
}